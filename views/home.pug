extends layout

block backMenu 
  div
block actionMenu
  div.actionMenu
    a(href="/categories/new") Add a category
    a(href="/recipes/new") Add a Recipe 
    a(href="/recipes/all") View all Recipes
block main 
  section
    h1 What do you want to prepare today?
    ul.resultList   
      each category in categories 
        li  
          a(href=`/category/${category.id}`)= category.category 