extends layout

block backMenu
  a(href="/home") Home

block actionMenu
  a(href=`/category/${categoryId}/edit`) Edit Category
  form(action=`/category/${categoryId}/delete`)
    button.deletion Delete Category

block main 
  section
    h1= categoryTitle
    ul.resultList   
      each recipe in recipes 
        li  
          a(href=`/recipe/${categoryId}/${recipe.id}`)= recipe.recipe 