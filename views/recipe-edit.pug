extends layout

block backMenu
  a.backMenu(href=`/home`) BACK

block actionMenu
  div.actionMenu
    a(href=`/home`) Cancel

block main 
  section
    h1 Edit Recipe
    p 
    form(action=`/recipes/edit/${id}` method="post") 
      dl 
          dt 
            label(for="title") Title:
          dd 
            input(type="text" name="title" placeholder="Title" value= title) 
          dt 
            label(for="category") Category:
          dd 
            select(id="category" name="category")
              each category in categories 
                option(value= category.id) #{category.category}
          dt 
            label(for="serves") Serves:
          dd 
            input(type="number" name="serves" placeholder="Serves" value= serves)
          dt 
            label(for="prep_time") Preparation time (in minutes):
          dd 
            input(type="number" name="prep_time" placeholder="Minutes" value= prep_time)
          dt 
            label(for="ingredients") Ingredients (separated by comma ","):
          dd 
            textarea(name="ingredients", cols="60", rows="10") #{ingredients}
          dt 
            label(for="steps") Instructions:
          dd 
            textarea(name="steps", cols="60", rows="10") #{steps}

      fieldset.formButtons 
        input(type="submit" value="Save")