doctype html 

html(lang="en-US") 
  head 
    title Reciper 
    meta(charset="UTF-8")
    link(rel="stylesheet", href="/stylesheets/whitespace-reset.css")
    link(rel="stylesheet", href="/stylesheets/appStyles.css")
    script(src="/javascripts/changeConfirmation.js")
  body 
    header
      section#topbar
        h1 Reciper
        if (username)
          form(action="/user/signout" method="post") 
            p Logged in as: #{username}
            button Sing Out
      nav.menu
        block backMenu 
        block actionMenu
    main
      - let kinds = Object.keys(flash || {});
      if kinds.length > 0
        ul 
          each kind in kinds 
            each message in flash[kind] 
              li.flash(class=kind)= message
      block main 
        p hello
    footer
      p bye