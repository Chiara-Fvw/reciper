extends layout

block backMenu 
  a(href=`/category/${recipeInfo.category_id}`)= categoryTitle

block actionMenu
  a(href=`/category/${recipeInfo.category_id}/edit`) Edit Recipe
  form(action=`/category/${recipeInfo.category_id}/delete`)
    button.deletion Delete Recipe

block main 
  section
    h1= recipeInfo.recipe
    article
      .recipeInfo
        .left
          .details
            p= `Serves: ${recipeInfo.serves}` 
            p= `Minutes: ${recipeInfo.prep_time}`
          .steps 
            h2 Preparation steps: 
            ul 
              each step in recipeInfo.steps.match(/\(?[^\.\?\!]+[\.!\?]\)?/g) 
                li= step
        .ingredients 
          h2 Ingredients: 
          ul 
            each ingredient in recipeInfo.ingredients.split(',')
              li= ingredient
        